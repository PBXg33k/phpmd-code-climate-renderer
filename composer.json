    "type": "library",
    "require": {
        "phpmd/phpmd": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Oguzhan Uysal",
            "email": "development@oguzhanuysal.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pbxg33k\\PhpmdCodeClimate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pbxg33k\\PhpmdCodeClimate\\Tests\\": "tests/"
        }
    }
}
